@model IEnumerable<OnlineShopping.DMS.Models.Category>

@{
    Layout = "_Layout2";
}





<header class="masthead">
    <div class="container px-5">
        <div class="row gx-5 align-items-center">

<h1 class="display-1 lh-1 mb-3">Look at Our Categories!.</h1>




        @foreach (var item in Model)
        {
         
            

        <div class="card" style="width: 18rem;">
                    <img class="card-img-top" width="60px" height="150px" src="~/images/Categories/@item.image" alt="Card image cap">
                        
                    <div class="card-body">


                        <h5 class="card-title">@item.Name</h5>


                        <a  class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID"  asp-controller="Categories">See Our Products</a>

            </div>
        </div>

        }

    </div>
    </div>

</header>