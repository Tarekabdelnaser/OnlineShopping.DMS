@model OnlineShopping.DMS.Models.Item

@{
    Layout = "_Layout2";
   

}


<header class="masthead">
    
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">

           
            <h1 class="display-1 lh-1 mb-3">@Model.Name</h1>

            

                <div >
                       <div class="card" >
                                    <div class="card-body">
                                        <div class="card-img-actions">


                         @*                   
                            <h3 class="text-danger text-center bg-muted "> <b> <i class="bi bi-currency-dollar">@Model.Price </b></i></h3>


                            <h3 class="text-danger text-center bg-muted"> <b> <i class="bi bi-currency-dollar">@Model.Tax.value </b></i></h3>


                         *@



                            <img src="~/images/Items/@Model.image" class="card-img img-fluid" width="96" height="350" alt="">
                                              
                                           
                                        </div>
                                    </div>


                                 


                        <div class="card-body bg-light text-center">
                            <div class="mb-2">
                                <h4 class="font-weight-semibold mb-2">

                                    @Model.Description

                                </h4>

                            </div>


                            <div class="d-flex justify-content-between">
                                <h3>Price </h3><h3> <i class="bi bi-currency-dollar"></i>@Model.Price</h3>
                            </div>

                            <div class="d-flex justify-content-between">
                                <h3>Taxes</h3><h3><i class="bi bi-currency-dollar"></i>@Model.Tax.value</h3>
                            </div>


                            <div class="d-flex justify-content-between">
                                <h3>Discount</h3><h3><i class="bi bi-currency-dollar"></i>@Model.Discount.value</h3>
                            </div>


                        <div class="d-flex justify-content-between">
                            <h3>Total</h3><h3><i class="bi bi-currency-dollar"></i>@Model.totalPrice </h3>
                        </div>


                        </div>



                       





                      


                    <div class="text-center">
                        <form asp-action="Create" asp-controller="Order" asp-route-id="@Model.ID" method="post" >
                            <input type="hidden" name="id" value="@Model.ID" />
                           <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-cart-plus" aria-hidden="true"></i> Add to cart</button>
                           </form>
                           </div>

                                       
                        

                                    </div>


                                    
                                </div>

                </div>



            

        </div>


    </div>

</header>
